# Apache Configuration for Grand Jyothi Construction Website

# Enable RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /constructioninnagpur/
</IfModule>

# Custom Error Documents
ErrorDocument 400 /constructioninnagpur/pages/400.php
ErrorDocument 401 /constructioninnagpur/pages/403.php
ErrorDocument 403 /constructioninnagpur/pages/403.php
ErrorDocument 404 /constructioninnagpur/pages/404.php
ErrorDocument 500 /constructioninnagpur/pages/500.php
ErrorDocument 502 /constructioninnagpur/pages/500.php
ErrorDocument 503 /constructioninnagpur/pages/503.php
ErrorDocument 504 /constructioninnagpur/pages/500.php

# Security Headers (commented out for XAMPP compatibility - uncomment if supported)
# <IfModule mod_headers.c>
#     Header set X-Frame-Options "SAMEORIGIN"
#     Header set X-XSS-Protection "1; mode=block"
#     Header set X-Content-Type-Options "nosniff"
#     Header set Referrer-Policy "strict-origin-when-cross-origin"
# </IfModule>

# Disable directory browsing
Options -Indexes

# Protect hidden files
<FilesMatch "^\.">
    Require all denied
</FilesMatch>

# Protect database files
<FilesMatch "\.(sql|db)$">
    Require all denied
</FilesMatch>

# Protect .env files
<Files ".env">
    Require all denied
</Files>

# Enable GZIP Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Default charset
AddDefaultCharset UTF-8

